<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal">

    <include android:id="@+id/containerImportant"
        layout="@layout/layout_important_container"/>

    <TextView
        android:id="@+id/tvCalendar"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_timetable_top"
        android:text="@string/tab_timetable"
        app:drawableEndCompat="@drawable/ic_calendar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_timetable_recycler_top"
        tools:listitem="@layout/item_lesson"
        tools:itemCount="4"/>

</LinearLayout>