<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal">

    <LinearLayout
        android:id="@+id/containerImportant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_important_container"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_container_important_horizontal"
        android:paddingTop="@dimen/padding_container_important_top"
        android:paddingEnd="@dimen/padding_container_important_horizontal"
        android:paddingBottom="@dimen/padding_container_important_bottom">

        <TextView
            android:id="@+id/tvAnonsTitle"
            style="@style/Text.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Важная информация" />

        <TextView
            android:id="@+id/tvAnonsDescription"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Все документы по стипендии отдавать в 204 кабинет" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCalendar"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_timetable_top"
        android:text="@string/tab_timetable"
        app:drawableEndCompat="@drawable/ic_calendar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_timetable_recycler_top"
        tools:listitem="@layout/item_lesson"
        tools:itemCount="4"/>

</LinearLayout>