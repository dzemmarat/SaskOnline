<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/bg_item_conversation">

    <ImageView
        android:id="@+id/ivTeacherAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_teacher_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivTeacherAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivTeacherAvatar"
        tools:text="Иван Игоревич"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tvMessage"
        style="@style/Text.Gray"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Вы: Иван Игоревич, здравствуйте! Я по поводу дз..." />

</androidx.constraintlayout.widget.ConstraintLayout>