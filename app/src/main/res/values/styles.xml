<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Gray">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text.Toolbar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.TabLayout">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.WeatherTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.WeatherTemperature">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="Text.WeatherTemperatureNull">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Text.WeatherTemperatureItemNull">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.WeatherCardTime">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="CenterHorizontal">
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>

    </style>

</resources>